.container
	.well
		form.form-horizontal(name="signupForm")
			fieldset
				legend New User Details
				.form-group
					.col-md-6
						input.form-control(name="firstName", type="text", placeholder="First Name", ng-model="firstName")
				.form-group
					.col-md-6
						input.form-control(name="lastName", type="text", placeholder="Last Name", ng-model="lastName")
				.form-group
					.col-md-6
						input.form-control(name="userName", type="text", placeholder="User Name", ng-model="userName", required)
				.form-group
					.col-md-6
						input.form-control(name="email", type="email", placeholder="Email", ng-model="email", required)
				.form-group
					.col-md-6
						input.form-control(name="password", type="password", placeholder="Password", ng-model="password", required)
				.form-group
					.col-md-6.col
						.pull-right
							button.btn.btn-primary(ng-click="signup()", ng-disabled="signupForm.$invalid") Submit
							| 
							a.btn.btn-default(href="/") Cancel