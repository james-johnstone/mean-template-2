.container
	.well
		form.form-horizontal(name="profileForm")
			fieldset
				legend User Profile
				.form-group
					label.col-md-2.control-label First Name
					.col-md-6
						input.form-control(name="firstName", type="text", placeholder="First Name", ng-model="firstName")
				.form-group
					label.col-md-2.control-label Last Name
					.col-md-6
						input.form-control(name="lastName", type="text", placeholder="Last Name", ng-model="lastName")
				.form-group
					label.col-md-2.control-label User Name
					.col-md-6
						input.form-control(name="userName", type="text", placeholder="User Name", ng-model="userName", required)
				.form-group(hidden)
					.col-md-6
						input.form-control(name="email", type="email", placeholder="Email", ng-model="email", required)
				.form-group
					.col-md-6.col
						.pull-right
							button.btn.btn-primary(ng-click="update()", ng-disabled="profileForm.$invalid") Submit
							| 
							a.btn.btn-default(href="/") Cancel